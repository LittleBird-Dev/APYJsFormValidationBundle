function DateTime(value, params)
{
    if (isNotDefined(value)) {
        return true;
    }

    value = String(value);

    var pattern = /^(\d{4})-(\d{2})-(\d{2}) (0[0-9]|1[0-9]|2[0-3]):([0-5][0-9]):([0-5][0-9])$/;

    if ( pattern.test(value) ) {
        return true;
    }

    return getComputeMessage(params.message);
}